
<p class="text-center">
  <h3 class="text-center">Event Name</h3>
  <h4 class="text-center primary"><%= @event.name %></h4>
</p>

<div id="questions" data-event-id="<%= @event.id %>">
  <%= render @event.questions %>
</div>



<%= form_for @question, url: '#' do |f| %>
  <div class="form-group">
    <strong> <%= f.label "Your Question:" %> </strong>
    <%= f.text_area :question, class: 'form-control' %>
    <small class="text-muted">From 2 to 1000 characters</small>
  </div>
  <%= f.submit "Ask", class: 'btn btn-primary btn-lg' %>
<% end %>

<hr>

<% if current_user.id == @event.user.id %>
  <%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', pages_myevents_path %>
